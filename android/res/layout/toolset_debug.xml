<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_debug_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="getDebug" />

        <Button
            android:id="@+id/button_debug_connectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paintConnectors" />

        <Button
            android:id="@+id/button_debug_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save" />

        <Button
            android:id="@+id/button_debug_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="load" />

        <Button
            android:id="@+id/button_debug_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete all" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/debug_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111"
            android:textColor="#ddd" />
    </ScrollView>
</LinearLayout>