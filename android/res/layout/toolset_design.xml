<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_new_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new class" />

    <Button
        android:id="@+id/button_paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paint tool" />

    <Button
        android:id="@+id/button_programming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="programming" />

    <Button
        android:id="@+id/button_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit screen" />

    <Button
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test play" />

</LinearLayout>